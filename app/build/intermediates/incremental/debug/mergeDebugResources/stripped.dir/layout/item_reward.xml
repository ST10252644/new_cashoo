<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ImageReward"
            android:layout_width="290dp"
            android:layout_height="130dp"
            android:src="@drawable/capuccino_jpg"
        android:contentDescription="Reward Image"
        android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textRewardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cappuccino"
            android:textStyle="bold"
            android:textSize="19sp"
            android:layout_marginTop="5dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textRewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 cashoos pts"
            android:textSize="17sp"
            android:textColor="#3b7c63"
            android:textStyle="italic"
            android:layout_marginTop="3dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/textRewardDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid until 05/11/2025"
            android:textSize="14sp"
            android:textColor="#999999"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />




    </LinearLayout>
</androidx.cardview.widget.CardView>
