<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF1DB">

    <!-- Top bar back arrow and title -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/backArrow"
        app:layout_constraintTop_toTopOf="@id/backArrow"
        app:layout_constraintBottom_toBottomOf="@id/backArrow"
        app:layout_constraintHorizontal_bias="0.1" />

    <!-- White card layout -->
    <LinearLayout
        android:id="@+id/profileCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_top_white"
        app:layout_constraintTop_toBottomOf="@id/backArrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Image with camera overlay -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_profile"
                android:layout_gravity="center"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_profile"
                android:background="@drawable/circle_blue" />
        </FrameLayout>

        <!-- Edit Profile Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Name Field -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Name"
            android:textColorHint="#999999"
            android:background="@drawable/edit_text_border_green"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="8dp" />

        <!-- Email Address -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="name@email.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_border_gray"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="16dp" />

        <!-- Payday Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How often do you get paid?"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="20dp" />

        <Spinner
            android:id="@+id/spinnerPayday"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_border_gray"
            android:layout_marginTop="8dp" />

        <!-- Salary Slider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="What's your salary?"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/salaryAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 10,000"
                android:textColor="#000000" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="10000"
            android:max="20000" />

        <!-- Savings Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="Set a minimum savings goal"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/savingsGoalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 1,000"
                android:textColor="#000000" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekSavingsGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="1000"
            android:max="10000" />

        <!-- Spending Goal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="Set a maximum spending goal"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/spendingGoalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 7,000"
                android:textColor="#000000" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekSpendingGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="7000"
            android:max="10000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
