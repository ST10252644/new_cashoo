<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="60dp"
            android:weightSum="2">



        </LinearLayout>

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <!-- Expense / Saving Toggle -->
                <RadioGroup
                    android:id="@+id/rg_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    android:paddingHorizontal="100dp">

                    <RadioButton
                        android:id="@+id/rb_expense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expense"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:button="@null"
                        android:textColor="@color/black"
                        android:background="@drawable/radio_underline_selector"

                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/rb_income"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Income"
                        android:gravity="center"
                        android:button="@null"
                        android:textColor="@color/black"
                        android:background="@drawable/radio_underline_selector"
                        />
                </RadioGroup>


                <!-- Category -->

                <!-- Name Input -->

                <!--spinner-->
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose category"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"/>

                <!-- Styled Dropdown -->
                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Select a category"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/primary"
                    />

                <!-- Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Name"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Name Input -->
                <EditText
                    android:id="@+id/transName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="e.g Uber"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/primary"/>



                <!-- Amount -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Amount"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Amount Input -->
                <EditText
                    android:id="@+id/transAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="e.g 150"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    android:inputType="numberDecimal"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/primary"/>


                <!-- Transaction Method -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Transaction Method"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Method Input -->
                <EditText
                    android:id="@+id/transMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="e.g Card or Cash"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/primary"/>

                <!-- Location -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Location"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Method Input -->
                <EditText
                    android:id="@+id/transLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="e.g Sandton"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/primary"/>

                <!-- Date -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Date"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Method Input-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <!-- Date Picker Button -->
                    <Button
                        android:id="@+id/btnPickDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="3dp"
                        android:text="Pick Date"
                        android:textSize="16sp" />

                    <!-- Time Picker Button -->
                    <Button
                        android:id="@+id/btnPickTime"
                        android:layout_width="0dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pick Time"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Display Date and Time in transDate (readonly) -->
                <EditText
                    android:id="@+id/transDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="add date and time"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/primary"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"/>


                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Description"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Method Input -->
                <EditText
                    android:id="@+id/transDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="e.g Went to the mall"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/primary"
                    android:minLines="3"
                    android:maxLines="5"
                    android:gravity="top"/>


                <!-- File Picker -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Add Photo"
                    android:textColor="@color/text_heading"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <Button
                        android:id="@+id/btn_choose_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose File"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:fontFamily="@font/inter_semibold"/>

                    <TextView
                        android:id="@+id/tv_file_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No File Chosen"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text"
                        android:textSize="16dp"
                        android:fontFamily="@font/inter_regular"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="Selected Image" />


                <!-- Add Entry Button -->
                <Button
                    android:id="@+id/btn_add_entry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Entry"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:background="@drawable/rounded_button"
                     />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
