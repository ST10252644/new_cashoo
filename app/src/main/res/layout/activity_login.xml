<?xml version="1.0" encoding="utf-8"?>
<!-- Root container using ConstraintLayout for flexible alignment -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    android:fitsSystemWindows="true">

    <!-- Title text displayed near the top -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="174dp"
        android:fontFamily="@font/inter_extrabold"
        android:letterSpacing="0.1"
        android:text="Welcome!"
        android:textColor="#7BC79E"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!-- CardView container for the login form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="42dp">

            <!-- Email input label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/email_address"
                android:textColor="@color/text_heading"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Email EditText input -->
            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="21dp"
                android:background="@drawable/bordered_box"
                android:fontFamily="@font/inter_regular"
                android:hint="example@example.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="21dp"
                android:paddingTop="16dp"
                android:paddingRight="21dp"
                android:paddingBottom="16dp"
                android:textColor="@color/text"
                android:textSize="18sp" />

            <!-- Password label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/password"
                android:textColor="@color/text_heading"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Password input field with visibility toggle -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <!-- Password EditText -->
                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordered_box"
                    android:fontFamily="@font/inter_regular"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingLeft="21dp"
                    android:paddingTop="16dp"
                    android:paddingRight="21dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text"
                    android:textSize="18sp" />

                <!-- Eye icon to toggle password visibility -->
                <ImageView
                    android:id="@+id/togglePasswordVisibility"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_eye_off" />
            </RelativeLayout>

            <!-- Forgot password clickable link -->
            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/inter_semibold"
                android:paddingBottom="32dp"
                android:text="Forgot password?"
                android:textColor="@color/tertiary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Login action button -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:fontFamily="@font/inter_semibold"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <!-- Footer section with register and delete links -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <!-- Static text before registration link -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="62dp"
                    android:fontFamily="@font/inter_regular"
                    android:paddingBottom="32dp"
                    android:text="Not a member?"
                    android:textColor="@color/text"
                    android:textSize="16sp" />

                <!-- Register now clickable text -->
                <TextView
                    android:id="@+id/registerNowText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingBottom="32dp"
                    android:text="Register now"
                    android:textColor="@color/tertiary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Delete tables clickable debug/developer option -->
                <TextView
                    android:id="@+id/deleteTables"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingBottom="32dp"
                    android:text="Delete now"
                    android:textColor="@color/tertiary"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
