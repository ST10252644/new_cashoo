<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/ClaimImage"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:src="@drawable/kanye"
            android:scaleType="centerCrop"
            android:contentDescription="Claim Image" />

      <TextView
          android:id="@+id/ClaimRewardTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Kanye Saint"
          android:textSize="19dp"
          android:textStyle="bold"
          android:gravity="center"
          android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/ClaimRewardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 cashoos pts"
            android:textColor="#3b7c63"
            android:textStyle="italic"
            android:layout_marginTop="3dp"
            android:textSize="17sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/ClaimDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valid until 05/11/2025"
            android:textColor="#999999"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/ClaimButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Claim Reward"
            android:backgroundTint="#76af9e"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>