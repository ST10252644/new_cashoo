<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainClaim"
    tools:context="com.example.apprewards.ClaimDetailActivity">

    <!-- Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#238780"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="4dp"
        android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="#1c6c66" >


    <!-- Image at the top -->
    <ImageView
        android:id="@+id/imageClaimDetail"
        android:layout_width="310dp"
        android:layout_height="220dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:scaleType="centerInside" />

    </LinearLayout>

        <!-- Buttons at the bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#238780"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you certain?"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to proceed with this reward selection?"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginBottom="30dp" />


            <!-- Confirm Button -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Confirm"
        android:backgroundTint="#10b981"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Cancel"
        android:backgroundTint="#ef4444"
        android:textColor="@color/white"
        android:textStyle="bold" />

        </LinearLayout>
</LinearLayout>
</LinearLayout>