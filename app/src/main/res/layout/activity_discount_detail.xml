<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/discMain"
    android:orientation="vertical">


    <!-- Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d3eae4"
        android:orientation="vertical"
        android:padding="24dp"
        android:elevation="4dp"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="250dp"
            android:gravity="center"
            android:background="#a4d0c5" >

    <!-- Display the discount image at the top -->
    <ImageView
        android:id="@+id/detailImg"
        android:layout_width="310dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:padding="16dp"
        android:scaleType="centerInside" />

        </LinearLayout>

    <!-- Buttons at the bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#d3eae4"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you certain?"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to proceed with this discount selection?"
            android:textColor="#4c4c4c"
            android:textSize="19sp"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#10b981"
            android:textColor="@color/white"
            android:text="Confirm" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#ef4444"
            android:textColor="@color/white"
            android:text="Cancel" />

    </LinearLayout>
</LinearLayout>
</LinearLayout>