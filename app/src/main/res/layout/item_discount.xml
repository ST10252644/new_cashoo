<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#eeeeee"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/discImg"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/kanye" />

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvRewardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount Reward"
                android:textColor="#888"
                android:textSize="14sp"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/txtDiscName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StarBucks Coffee"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvDiscDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 % OFF"
                android:textColor="#999999"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="4dp" />


        </LinearLayout>

        <!-- Expiration and Redeem -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">


            <Button
                android:id="@+id/btnRedeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="#642942"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
